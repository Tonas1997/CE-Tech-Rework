<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[HRK] Gun Nut - KRISS Vector</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- KRISS Vector Gen. I -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="HRK_KRISSVectorGenI"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite Inherit="False"/>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="HRK_KRISSVectorGenI"]/recipeMaker</xpath>
					<value>
						<researchPrerequisites Inherit="False">
							<li>BlowbackOperation</li>
							<li>PrecisionRifling</li>
						</researchPrerequisites>
					</value>
				</li>
				
				<!-- KRISS Vector Gen. II -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="HRK_KRISSVectorGenII"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite Inherit="False"/>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="HRK_KRISSVectorGenII"]/recipeMaker</xpath>
					<value>
						<researchPrerequisites Inherit="False">
							<li>BlowbackOperation</li>
							<li>PrecisionRifling</li>
						</researchPrerequisites>
					</value>
				</li>
				
				<!-- KRISS Vector ACP -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="HRK_KRISSVectorACP"]/recipeMaker/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite Inherit="False"/>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="HRK_KRISSVectorACP"]/recipeMaker</xpath>
					<value>
						<researchPrerequisites Inherit="False">
							<li>BlowbackOperation</li>
							<li>PrecisionRifling</li>
						</researchPrerequisites>
					</value>
				</li>
				
				
			</operations>
		</match>
	</Operation>
</Patch>